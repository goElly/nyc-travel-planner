<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@mipmap/viewbg"
        android:orientation="horizontal">

        <Space
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/imageView3_4"
            android:layout_width="219dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:scaleType="fitXY"
            app:srcCompat="@mipmap/ic_launcher" />

        <Space
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Space
                android:layout_width="match_parent"
                android:layout_height="16dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title3_4"
                    android:layout_width="193dp"
                    android:layout_height="wrap_content"
                    android:text="Title 3_4"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    app:fontFamily="sans-serif" />

                <CheckBox
                    android:id="@+id/checkBox3_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/tag3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tag1, Tag2"
                android:textColor="@color/colorAccent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="23dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/rating3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rating: 5.0"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/price3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price: $$"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/duration3_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="2 hours"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <TextView
                android:id="@+id/address3_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="address" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
